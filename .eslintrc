{
  "env": {
    "browser": true,
    "node": true
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "binaryLiterals": false,
    "blockBindings": true,
    "classes": true,
    "defaultParams": true,
    "destructuring": true,
    "forOf": true,
    "generators": false,
    "modules": true,
    "objectLiteralComputedProperties": true,
    "objectLiteralDuplicateProperties": false,
    "objectLiteralShorthandMethods": true,
    "objectLiteralShorthandProperties": true,
    "octalLiterals": false,
    "regexUFlag": false,
    "regexYFlag": false,
    "restParams": true,
    "spread": true,
    "superInFunctions": true,
    "templateStrings": true,
    "unicodeCodePointEscapes": false,
    "globalReturn": false,
    "jsx": true
  },
  "rules": {
    "arrow-parens": 0,
    "arrow-spacing": 0,
    "accessor-pairs": 0,
    "block-scoped-var": 0,
    "callback-return": 0,
    "comma-dangle": [2, "never"],
    "complexity": [0, 11],
    "consistent-return": 0,
    "curly": [0, "all"],
    "default-case": 0,
    "dot-location": 0,
    "dot-notation": [0, { "allowKeywords": true }],
    "eqeqeq": 0,
    "guard-for-in": 0,
    "handle-callback-err": 0,
    "id-length": 0,
    "init-declarations": 0,
    "prefer-spread": 0,
    "prefer-reflect": 0,
    "radix": 0,
    "require-yield": 0,
    "use-isnan": 2,
    "valid-jsdoc": 0,
    "valid-typeof": 2,
    "vars-on-top": 0,
    "wrap-iife": 0,
    "wrap-regex": 0,
    "yoda": [0, "never"],

    "no-alert": 0,
    "no-caller": 0,
    "no-class-assign": 0,
    "no-cond-assign": 2,
    "no-console": 0,
    "no-const-assign": 0,
    "no-constant-condition": 2,
    "no-control-regex": 2,
    "no-debugger": 2,
    "no-div-regex": 0,
    "no-dupe-keys": 2,
    "no-dupe-args": 2,
    "no-duplicate-case": 2,
    "no-else-return": 0,
    "no-empty": 2,
    "no-empty-character-class": 2,
    "no-empty-label": 0,
    "no-eq-null": 0,
    "no-eval": 0,
    "no-ex-assign": 2,
    "no-extend-native": 0,
    "no-extra-bind": 0,
    "no-extra-boolean-cast": 2,
    "no-extra-parens": 0,
    "no-extra-semi": 2,
    "no-fallthrough": 2,
    "no-floating-decimal": 0,
    "no-func-assign": 2,
    "no-implicit-coercion": 0,
    "no-implied-eval": 0,
    "no-inner-declarations": [2, "functions"],
    "no-invalid-regexp": 2,
    "no-invalid-this": 0,
    "no-irregular-whitespace": 2,
    "no-iterator": 0,
    "no-labels": 0,
    "no-lone-blocks": 0,
    "no-lonely-if": 0,
    "no-loop-func": 0,
    "no-mixed-requires": [0, false],
    "no-multi-spaces": 0,
    "no-multi-str": 0,
    "no-native-reassign": 0,
    "no-negated-in-lhs": 2,
    "no-nested-ternary": 0,
    "no-new": 0,
    "no-new-func": 0,
    "no-new-require": 0,
    "no-new-wrappers": 0,
    "no-obj-calls": 2,
    "no-octal": 2,
    "no-octal-escape": 0,
    "no-param-reassign": 0,
    "no-path-concat": 0,
    "no-process-env": 0,
    "no-process-exit": 0,
    "no-proto": 0,
    "no-redeclare": 2,
    "no-regex-spaces": 2,
    "no-reserved-keys": 0,
    "no-restricted-modules": 0,
    "no-return-assign": 0,
    "no-script-url": 0,
    "no-self-compare": 0,
    "no-sequences": 0,
    "no-sparse-arrays": 2,
    "no-sync": 0,
    "no-throw-literal": 0,
    "no-undef": 2,
    "no-unexpected-multiline": 0,
    "no-underscore-dangle": 0,
    "no-unneeded-ternary": 0,
    "no-unreachable": 2,
    "no-unused-expressions": 0,
    "no-useless-call": 0,
    "no-void": 0,
    "no-warning-comments": [0, {"terms": ["todo", "fixme", "xxx"], "location": "start"}],
    "no-with": 0,

    /** Possible errors **/

    /** Best practices **/

    /** Strict mode **/
    "strict": [2, "global"],

    /** Variables **/
    "no-catch-shadow": 0,
    "no-delete-var": 2,
    "no-label-var": 0,
    "no-shadow": 2,
    "no-shadow-restricted-names": 2,
    "no-undef-init": 0,
    "no-undefined": 1,
    "no-unused-vars": [2, {"vars": "local", "args": "after-used"}],
    "no-use-before-define": 0,

    /** Style **/
    "array-bracket-spacing": [0, "never"],
    "brace-style": [1, "1tbs"],
    "camelcase": [1, {"properties": "always"}],
    "comma-spacing": [1, {"before": false, "after": true}],
    "comma-style": [1, "last"],
    "computed-property-spacing": [1, "never"],
    "consistent-this": [1, "self"],
    "eol-last": 2,
    "func-names": 1,
    "func-style": [0, "declaration"],
    "indent": [1, "tab"],
    "key-spacing": [1, {"beforeColon": false, "afterColon": true}],
    "lines-around-comment": [1, {"beforeBlockComment": true, "beforeLineComment": true}],
    "linebreak-style": [0, "unix"],
    "max-nested-callbacks": [1, 3],
    "new-cap": [2, {"newIsCap": true, "capIsNew": true}],
    "new-parens": 2,
    "newline-after-var": 0,
    "no-array-constructor": 0,
    "no-continue": 0,
    "no-inline-comments": 0,
    "no-lonely-if": 1,
    "no-mixed-spaces-and-tabs": [1, "smart-tabs"],
    "no-multiple-empty-lines": [1, {"max": 2}],
    "no-nested-ternary": 1,
    "no-new-object": 2,
    "no-spaced-func": 1,
    "no-ternary": 0,
    "no-trailing-spaces":  [1, {"skipBlankLines": true}],
    "no-underscore-dangle": 0,
    "no-unneeded-ternary": 1,
    "object-curly-spacing": [0, "never"],
    "one-var": 0,
    "operator-assignment": [0, "always"],
    "operator-linebreak": [1, "before"],
    "padded-blocks": 0,
    "quote-props": [1, "as-needed"],
    "quotes": [1, "single"],
    "semi": [1, "always"],
    "semi-spacing": [1, {"before": false, "after": true}],
    "sort-vars": 0,
    "space-after-keywords": [0, "always"],
    "space-before-blocks": [1, "always"],
    "space-before-function-paren": [1, "never"],
    "space-in-parens": [1, "never"],
    "space-infix-ops": 0,
    "space-return-throw-case": 1,
    "space-unary-ops": [0, { "words": true, "nonwords": false }],
    "spaced-comment": 1,

    /** ES2015 **/
    "constructor-super": 2,
    "generator-star-spacing": 0,
    "no-this-before-super": 2,
    "no-var": 1,
    "object-shorthand": 0,
    "prefer-const": 1,

    /** Legacy **/
    "max-depth": [1, 4],
    "max-len": [1, 80, 4],
    "max-params": [0, 3],
    "max-statements": [0, 10],
    "no-bitwise": 0,
    "no-plusplus": 0,
  }
}
